<Window x:Class="ByteinoFinance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ByteinoFinance.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FFC8C8C8">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button Content="Add Transaction" Width="150" Height="40" 
                HorizontalAlignment="Left" 
                Click="OpenAddTransaction_Click" >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

       
        <ContentControl x:Name="TransactionListControl" Grid.Row="1" />

    </Grid>
</Window>
